<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="titleTextColor">@color/colorAccentBlue</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="titleTextColor">@color/colorPrimaryPink</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="titleTextColor">@color/colorPrimaryGreen</item>
    </style>

    <style name="BeeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBee</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBee</item>
        <item name="colorAccent">@color/colorAccentBee</item>
        <item name="titleTextColor">@color/colorPrimaryDarkBee</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.RaisedButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextView setting header -->
    <style name="AppSettingHeader">
        <item name="android:textColor">@color/colorNoActionText</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>
    <style name="AppSettingSelectableText">
        <item name="android:paddingTop">@dimen/padding_l</item>
        <item name="android:paddingBottom">@dimen/padding_l</item>
        <item name="android:paddingLeft">@dimen/padding_m</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
